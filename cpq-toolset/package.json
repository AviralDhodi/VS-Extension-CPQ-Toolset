{
  "name": "cpq-toolset-v3",
  "version": "3.0.0",
  "description": "CPQ Toolset v3 - VS Code Extension for Salesforce CPQ Development",
  "main": "extension.js",
  "scripts": {
    "dev": "node server.js",
    "build": "node scripts/build.js",
    "build:extension": "node scripts/build-extension.js",
    "build:all": "npm run build && npm run build:extension",
    "clean": "node scripts/clean.js",
    "lint": "eslint . --ext .js,.json",
    "lint:fix": "eslint . --ext .js,.json --fix",
    "test": "npm run lint && node tests/run.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "setup": "node scripts/postinstall.js",
    "download:slds": "node scripts/download-slds-icons.js"
  },
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=16.0.0"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cpq-toolset.launch",
        "title": "Launch CPQ Toolset",
        "category": "CPQ"
      }
    ],
    "keybindings": [
      {
        "command": "cpq-toolset.launch",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    "configuration": {
      "title": "CPQ Toolset",
      "properties": {
        "cpq-toolset.salesforceCliPath": {
          "type": "string",
          "default": "",
          "description": "Path to Salesforce CLI (sf or sfdx)"
        },
        "cpq-toolset.enableDebugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        },
        "cpq-toolset.defaultTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Default timeout for SFDX commands (ms)"
        }
      }
    }
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "express": "^4.18.2",
    "lucide": "^0.305.0",
    "mocha": "^11.7.1",
    "multer": "^1.4.5-lts.1",
    "open": "^8.4.2",
    "python-shell": "^5.0.0",
    "rotating-file-stream": "^3.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "fs-extra": "^11.2.0"
  },
  "publisher": "aviraldhodi",
  "repository": {
    "type": "git",
    "url": "https://github.com/AviralDhodi/VS-Extension-CPQ-Toolset.git"
  },
  "icon": "icon.png"
}
